{
  "name": "safe-browsing-extension",
  "version": "0.4.0",
  "private": true,
  "description": "Chromium Manifest V3 ad blocker extension",
  "scripts": {
    "validate": "node scripts/validate.js",
    "rules:compile": "node scripts/compile_rules.js",
    "test:quality": "node --test tests/rule-quality.test.js",
    "test:compiler": "node --test tests/rules-compiler.test.js",
    "test": "npm run test:quality && npm run test:compiler",
    "rules:update": "node scripts/update_strict_rules.js",
    "build:zip": "bash scripts/package_extension.sh"
  }
}
